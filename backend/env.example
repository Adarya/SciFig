# SciFig AI Statistical Engine Configuration

# Application Settings
APP_NAME="SciFig AI Statistical Engine"
APP_VERSION="2.0.0"
DEBUG=false
HOST="0.0.0.0"
PORT=8000
RELOAD=false

# CORS Origins (comma-separated)
ALLOWED_ORIGINS="http://localhost:5173,http://localhost:5174,http://localhost:5175,http://localhost:5176,http://localhost:3000"

# Supabase Configuration
# Get these from your Supabase dashboard: Settings > API
SUPABASE_URL="https://your-project-id.supabase.co"
SUPABASE_ANON_KEY="your-anon-key-here"
SUPABASE_SERVICE_ROLE_KEY="your-service-role-key-here"

# Authentication
# Generate a secure secret key for JWT tokens
SECRET_KEY="your-super-secret-jwt-key-here-make-it-long-and-random-must-be-at-least-32-characters"
ALGORITHM="HS256"
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# File Upload Settings
MAX_FILE_SIZE=52428800  # 50MB in bytes
UPLOAD_DIR="uploads"

# Statistical Analysis Settings
MAX_DATASET_SIZE=100000
CACHE_RESULTS=true

# Development Settings (set DEBUG=true for development)
# DEBUG=true
# RELOAD=true 