# Backend Environment Variables Template (FastAPI)  
# Copy this to .env for local development
# These variables are server-side only and are PRIVATE

# Application Settings
APP_NAME="SciFig AI Statistical Engine"
APP_VERSION="2.0.0"
DEBUG=false
HOST="0.0.0.0"
PORT=8000
RELOAD=false

# CORS Origins - Update with your actual frontend URLs
ALLOWED_ORIGINS="http://localhost:5173,https://your-app.railway.app"

# ðŸ”’ SENSITIVE: Supabase Configuration
SUPABASE_URL="https://your-project-id.supabase.co"
